{
  "name": "<%= opts.projectSlug %>",
  "title": "<%= opts.themeName %>",
  "version": "0.1.0",
  "description": "<%= opts.description %>",
  "keywords": [
    "wordpress"
  ],
  "homepage": "<%= opts.themeURI %>",
  "license": "<%= opts.license %>",
  "private": "true",
  "author": {
    "name": "<%= opts.authorName %>",
    "email": "<%= opts.authorEmail %>"<% if ( opts.authorURI ) { %>,
    "url": "<%= opts.authorURI %>"<% } %>
  },
  "main": "style.css",
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-bump": "^2.8.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.2",
    "gulp-imagemin": "^4.0.0",
    "gulp-jshint": "^2.0.4",
    "gulp-load-plugins": "^1.5.0",
    "gulp-notify": "^3.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.6.1",
    "gulp-sass": "^3.1.0",
    "gulp-sass-lint": "^1.3.4",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "gulp-wp-pot": "^2.0.6",
    "jshint": "^2.9.5",
    "jshint-stylish": "^2.2.1",
    <% if ( opts.bootstrap ) { %>
    "bootstrap-sass": "^3.3.7"
    <% } else { %>
    "normalize-scss": "^7.0.0"
    <% } %>
  }
}
