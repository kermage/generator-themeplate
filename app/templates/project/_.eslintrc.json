{
  "extends": [
    "plugin:@wordpress/eslint-plugin/recommended",
    "plugin:@typescript-eslint/recommended"
  ],

  "ignorePatterns": [
    "node_modules/**",
    "assets/js/**/*.js"
  ],

  "rules": {
    "camelcase": [
      "error",
      {
        "ignoreGlobals": true,
        "properties": "never"
      }
    ]
  },

  "globals": {
    "jQuery": "readonly",
    "<%= opts.functionPrefix %>_options": "writable"
  }
}
